<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XamarinWeatherExample.Views.Templates.CityListItemTemplateView">

    <ContentView.Content>
        <Frame CornerRadius="5" HorizontalOptions="FillAndExpand" HasShadow="True" Margin="5">
            <StackLayout Orientation="Horizontal" Margin="5" HorizontalOptions="FillAndExpand" HeightRequest="40" >
            <Label Text="{Binding CityName}" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" 
             TextColor="#00A6FF" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
             <Image Source="{Binding CityWeatherIcon, StringFormat='http://openweathermap.org/img/wn/{0}@2x.png'}"/>
             <Label Text="{Binding CurrentTemperature, Converter={StaticResource FahranheitToCelsiusConverter}}" HorizontalOptions="End"  HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>

             <StackLayout.GestureRecognizers>
                 <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ShowCityDetailCommand}"/>
             </StackLayout.GestureRecognizers>

         </StackLayout>
        </Frame>
         
    </ContentView.Content>
</ContentView>
